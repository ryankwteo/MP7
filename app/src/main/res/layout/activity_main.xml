<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/mealButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="274dp"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginTop="67dp"
        android:onClick="openMeals"
        android:text="Meals"
        app:layout_constraintBottom_toTopOf="@+id/cocktailsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cocktailsButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="74dp"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp"
        android:onClick="openCocktails"
        android:text="Cocktails"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mealButton" />
</android.support.constraint.ConstraintLayout>